<%= render 'search' %>
<div class="span10">
  <div class="btn-toolbar">
    <div class="btn-group">
      <div class="btn input-prepend">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="icon-check-empty icon-large">&nbsp;&nbsp;<span class="icon-caret-down"></span></i>
        </a>
        <ul class="dropdown-menu">
          <li><a href="#"><i class="icon-check"> All</i></a></li>
          <li><a href="#"><i class="icon-check-empty"> None</i></a></li>
        </ul>

        <span class="add-on"><i class="icon-search icon-large"></i></span>
        <input class="input-xxlarge" type="text" placeholder="<%= I18n.t(:search)%>"/>
        <li class="btn btn-info" id="search"><i class="icon-refresh"></i></li>
        <%= link_to t(:only_me), work_orders_path(params: request.query_parameters.merge({selfish:params[:selfish] != 'true'})), class: "btn #{'active' if params[:selfish] == 'true'}" %>
        <a style="margin-left:20px;" class="btn btn-danger"><i class="icon-trash icon-white"> Delete</i></a>
      </div>
    </div>
  </div>
  <%= paginate @work_orders %>
  <% @work_orders.each do |work_order| %>
    <a href="<%= work_order_path(work_order) %>">
      <div class="row well span12" style="margin-left:0px;">
        <div class="span1 item-selector">
          <input type="checkbox" name="work_order_<%=work_order.id%>"/>
        </div>
        <div class="span11">
          <div class="span9">
            <h3><%= work_order.client.name %></h3>
            <h6><small><%= t :owner, scope: [:activerecord, :models, :work_order]%>:</small>
              <%= work_order.owner.name %></h6>
            <h6><small><%= t :author, scope: [:activerecord, :models, :work_order]%>:</small>
              <%= work_order.author.name %></h6>
          </div>

          <div class="span3">
            <label class="pull-right" style="text-align:right">

              <h2>&yen;300,000,000</h2>
              <h6><small>
              <%= t :payment_deadline, scope: [:activerecord, :models, :payment] %>
            </small>
              <%= work_order.payment.payment_deadline if work_order.payment%>
            </h6>
              <h6><%= work_order.status %></h6>
            </label>
          </div>
        </div>
      </a>
        <div class="span11">
          <br>
          <div class="tabbable tabs-left">
            <ul class="nav nav-tabs" id="work_order_tabs">
              <li class="active"><a href="#products_<%= work_order.id %>" data-toggle="tab"><%= t :products %></a></li>
              <li><a href="#memo_<%= work_order.id %>" data-toggle="tab"><%= t :memo %></a></li>
              <li><a href="#change_log_<%= work_order.id %>" data-toggle="tab"><%= t :change_log %></a></li>
