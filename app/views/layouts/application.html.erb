<!DOCTYPE html>
<html>
  <head>
    <title>Rekk</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <style>
      body {
      padding-top: 60px;
      }
    </style>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= csrf_meta_tags %>
 </head>
  <body>
    <div class="navbar navbar-fixed-top">
    <%= javascript_include_tag "application" %>
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to I18n.t(:application_title), '/', :class=>'brand' %>
          <div class="btn-group pull-right">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i><%= @current_user.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="#">Profile</a></li>
              <li class="divider"></li>
              <li>
              <%= link_to I18n.t(:logout), '/logout' %>
            </ul>
          </div>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active">
              <%= link_to I18n.t(:users), users_path %>
              </li>
              <li>
              <%= link_to I18n.t(:clients), clients_path %>
              </li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div>
          <!--/.nav-collapse -->
        </div>
      </div>
    </div>
       <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, :id => "flash_#{name}") %>
      <% end %>
    <div class="container-fluid">
     <%= yield %>
      <hr>
      <footer>
      <p>Reallyenglish 2012</p></footer>
    </div>
    
  </body>
</html>
