<!DOCTYPE html>
<html>
  <head>
    <title>Rekk</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      body {
        padding-top: 100px;
      }
    </style>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <%= javascript_include_tag "application" %>
      <div class="navbar-inner">
        <div class="container-fluid">
          <%= link_to('/') do %>
            <%= image_tag "reallyenglish-logo.png", class: 'brand', height: '56px' %>
          <% end %>
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <% if @current_user %>
            <div style="" class="pull-right">
              <div class="btn-group pull-right">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                  <i class="icon-user"></i><%= @current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                <%= link_to I18n.t(:logout), '/logout' %>
              </ul>
            </div>
            <div class="nav-collapse">
              <ul class="nav">
                <li <% if controller.is_a?(WorkOrdersController) %> class="active"<% end %>>
                <%= link_to I18n.t(:work_orders), work_orders_path %>
                </li >

                <li <% if controller.is_a?(ClientsController) %> class="active"<% end %>>
                <%= link_to I18n.t(:clients), clients_path %>
                </li >

                <li <% if controller.is_a?(ContactsController) %> class="active"<% end %>>
                <%= link_to I18n.t(:contacts), contacts_path %>
                </li>
                <!--               
                <li <% if controller.is_a?(UsersController) %> class="active"<% end %>>
                <%= link_to I18n.t(:users), users_path %>
                </li>
                -->
                <li <% if controller.is_a?(ProductTypesController) %> class="active"<% end %>>
                <%= link_to I18n.t(:product_types), product_types_path %>
                </li>
                <li <% if controller.is_a?(ProductsController) %> class="active"<% end %>>
                <%= link_to I18n.t(:products), products_path %>
                </li>

              </ul>
            </div>
          </div>
        <% end %>
        <!--/.nav-collapse -->
      </div>
    </div>
  </div>
  <br>
  <br>
  <div class="container-fluid">
    <div class="row-fluid">
      <%= yield %>
    </div>
    <hr>
    <footer>
    <p>Reallyenglish 2012</p></footer>
  </div>

</body>
</html>
