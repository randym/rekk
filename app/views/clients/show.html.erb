<%= render 'layouts/search_list',  items: @clients, 
  list_label: t(:clients),
  item_label: Proc.new { |item| "#{item.name}(#{item.local_name})" },
  default_label: I18n.t(:only_my_items),
  alternate_label: I18n.t(:all_items),
  alternate_path: client_path(@client, alternate: 1) %>

<div class="span9">

  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, :id => "flash_#{name}") %>
  <% end %>
  <div class="btn-toolbar">

    <div class="btn-group">
      <%= link_to(new_work_order_path(client_id: @client.id), class: 'btn') do %>
        <i class="icon-plus"></i> New Work Order
      <% end %>
      <%= link_to(work_orders_path(client_id: @client.id), class: 'btn') do %>
        <i class="icon-bar-chart"></i> Show Work Orders
      <% end %>
    </div>
    <div class="btn-group">

      <%= link_to(new_work_order_path(client_id: @client.id), class: 'btn') do %>
        <i class="icon-bar-chart"></i> Sales Report
      <% end %>

    </div>
  </div>
  <div class="well">
    <%= render 'form' %>
  </div>
</div>
